# Pulse Architects Environment Variables
# Copy this file to .env.local for development

# ===============================
# DATABASE - Vercel Postgres
# ===============================

# Main database URL with connection pooling
DATABASE_URL="postgres://username:password@host:port/database?sslmode=require&pgbouncer=true"

# Direct URL for migrations (without connection pooling)
DIRECT_URL="postgres://username:password@host:port/database?sslmode=require"

# ===============================
# NEXTAUTH.JS CONFIGURATION
# ===============================

# NextAuth URL (automatically set by Vercel)
NEXTAUTH_URL="http://localhost:3000"

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-here"

# ===============================
# AUTHENTICATION PROVIDERS
# ===============================

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (optional)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ===============================
# FILE STORAGE - CLOUDINARY
# ===============================

CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Upload preset for client-side uploads
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET="your-upload-preset"

# ===============================
# PAYMENT PROCESSING - STRIPE
# ===============================

# Stripe publishable key (safe for client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Stripe secret key (server-side only)
STRIPE_SECRET_KEY="sk_test_..."

# Stripe webhook secret for event verification
STRIPE_WEBHOOK_SECRET="whsec_..."

# ===============================
# EMAIL SERVICE - RESEND
# ===============================

RESEND_API_KEY="re_..."
FROM_EMAIL="noreply@pulseArchitects.com"

# ===============================
# SECURITY & MONITORING
# ===============================

# Enable audit logging
ENABLE_AUDIT_LOGGING="true"

# Rate limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# File upload limits (in bytes)
MAX_FILE_SIZE="52428800"  # 50MB
MAX_FILES_PER_PLAN="20"

# ===============================
# FEATURE FLAGS
# ===============================

# Enable custom plan requests
ENABLE_CUSTOM_REQUESTS="true"

# Enable guest browsing (no auth required)
ENABLE_GUEST_BROWSING="true"

# Enable review system
ENABLE_REVIEWS="true"

# ===============================
# ANALYTICS & TRACKING
# ===============================

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Vercel Analytics (automatically enabled on Vercel)
VERCEL_ANALYTICS="true"

# ===============================
# DEVELOPMENT SETTINGS
# ===============================

# Debug mode for development
DEBUG="false"

# Seed database on startup (development only)
SEED_DATABASE="false"

# Enable mock payments in development
MOCK_PAYMENTS="false"